<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Nav View -->
    <style name="BottomViewTitleInactive" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomViewTitleActive" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Search edit text -->
    <style name="SearchEditText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- White italic text on button -->
    <style name="WhiteTextOnButton" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_regular_italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Italic title rv -->
    <style name="ItalicTitleWhite" parent="WhiteTextOnButton">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Italic price rv -->
    <style name="ItalicTitleBlue" parent="ItalicTitleWhite">
        <item name="android:textColor">@color/cerulean_blue</item>
    </style>

    <!-- Italic date passengers -->
    <style name="ItalicTitleGrey" parent="ItalicTitleWhite">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <!-- Offers Tickets Fragment -->
    <style name="ChipButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/ebony</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="HeaderText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gainsboro</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderSmallerText" parent="HeaderText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextWhite" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextGray" parent="TextWhite">
        <item name="android:textColor">@color/bright_grey</item>
    </style>

</resources>